<nodeDefs>
  <nodeDef id="controller" nls="ctl">
    <editors />
    <sts>
      <st id="ST" editor="connect" />
    </sts>
    <cmds>
      <sends />
      <accepts>
        <cmd id="UPDATE" /> 
        <cmd id="QUERY" />     
      </accepts>
    </cmds>
  </nodeDef>

  <nodeDef id="room" nls="n_room">
    <sts>
      <st id="ST" editor="connect" />
      <st id="CLITEMP" editor="temperature" />
      <st id="CLISPH" editor="temperature" />
      <st id="CLIMD" editor="t_ctrl_mode" />
      <st id="GV0" editor="energy_req" />
      <st id="GV1" editor="bool" />
      <st id="GV2" editor="bool" />
      <st id="GV3" editor="t_timestamp" />     
    </sts>
    <cmds>
      <sends />
      <accepts>
        <cmd id="UPDATE" />  
        <cmd id="SETPOINT" >
                <p id="" editor="set_temp" init="CLISPH"/>
        </cmd>      
        <cmd id="OPMODE" >
                <p id="" editor="setCLIMD" init="CLIMD"/> 
        </cmd>          
</accepts>
    </cmds>
  </nodeDef>

  <nodeDef id="valve" nls="n_valve">
    <sts>
      <st id="ST" editor="connect" />
      <st id="BATLVL" editor="bat_value" />
      <st id="GV0" editor="battery" />
      <st id="GV1" editor="rf_strength" />
    </sts>
    <cmds>
      <sends />
      <accepts> 
      </accepts>
    </cmds>
  </nodeDef>

  

</nodeDefs>
